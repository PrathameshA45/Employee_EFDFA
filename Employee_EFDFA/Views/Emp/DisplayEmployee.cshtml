@model Employee_EFDFA.Models.Employee

@{
    ViewBag.Title = "Employee Details";
}

<div class="container mt-4">
    <h2 class="text-center text-white py-2 mb-4" style="background-color: yellowgreen;">Employee Details</h2>

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Employee ID:</dt>
                <dd class="col-sm-9">@Model.Eid</dd>

                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Ename</dd>

                <dt class="col-sm-3">Job Title:</dt>
                <dd class="col-sm-9">@Model.Job</dd>

                <dt class="col-sm-3">Salary:</dt>
                <dd class="col-sm-9">@Model.Salary</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status)">
                        @Html.DisplayFor(E => E.Status)
                    </span>
                </dd>

                <dt class="col-sm-3">Department ID:</dt>
                <dd class="col-sm-9">@Model.Did</dd>
            </dl>

            <div class="text-center mt-4">
                @Html.ActionLink("Back to Employee List", "DisplayEmployees", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>
