@model Employee_EFDFA.Models.Employee

@{
    ViewBag.Title = "Delete Employee";
}

<div class="container mt-4">
    <h2 class="text-center text-white py-2 mb-4" style="background-color: yellowgreen;">Delete Employee</h2>

    @using (Html.BeginForm("DeleteEmployee", "Emp", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <table class="table table-bordered table-striped">
            <tr>
                <th>EID</th>
                <td>@Html.TextBoxFor(E => E.Eid, new { @class = "form-control", @readonly = "readonly" })</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Html.TextBoxFor(E => E.Ename, new { @class = "form-control", @readonly = "readonly" })</td>
            </tr>
            <tr>
                <th>Job</th>
                <td>@Html.TextBoxFor(E => E.Job, new { @class = "form-control", @readonly = "readonly" })</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>@Html.TextBoxFor(E => E.Salary, new { @class = "form-control", @readonly = "readonly" })</td>
            </tr>
            <tr>
                <th>Department ID</th>
                <td>@Html.TextBoxFor(E => E.Did, new { @class = "form-control", @readonly = "readonly" })</td>
            </tr>
        </table>

        <div class="alert alert-danger text-center">
            Are you sure you want to delete this employee?
        </div>

        <div class="text-center">
            <input type="submit" value="Yes, Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "DisplayEmployees", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
